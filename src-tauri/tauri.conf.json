{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "quickqr",
  "version": "0.1.0",
  "identifier": "com.quickqr.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "quickqr",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows":{
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "android": {
      "minSdkVersion": 29
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
